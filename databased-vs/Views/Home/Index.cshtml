@{
ViewData["Title"] = "Home Page";
}
@model List<User>;

  <div class="text-center">
    @if (Model.Count == 0)
    {
    <h1 class="text-center">No Users Found</h1>
    }
    else
    {
    <h1 class="text-center mb-5">Users</h1>
    }
    @foreach (var user in Model)
    {
    <h3>@user.Name | (@user.Email)</h3>
    <p class="opacity-50">@user.Password</p>
    <div class="d-flex justify-content-center">
      @if (user.Password.Last() != '*')
      {
      <form asp-controller="Home" asp-action="HidePassword" method="post">
        <input type="hidden" name="id" value="@user._id" />
        <button type="submit" class="btn btn-primary">Hide Password</button>
      </form>
      }
      <form asp-controller="Home" asp-action="UserDetails">
        <input type="hidden" name="property" value="_id" />
        <input type="hidden" name="value" value="@user._id" />
        <button type="submit" class="btn btn-secondary">See Details</button>
      </form>
      <form asp-controller="Home" asp-action="ManyUsers">
        <input type="hidden" name="property" value="Name" />
        <input type="hidden" name="value" value="@user.Name" />
        <button type="submit" class="btn btn-secondary">Get all with same name</button>
      </form>
    </div>
    }
  </div>
