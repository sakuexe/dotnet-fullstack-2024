@using financeapp.Models
@model List<Finance>

  <div id="all_finances" class="grid gap-4 max-h-[80vh] overflow-y-auto">
    @foreach (var item in Model)
    {
    <div>
      <div class="header flex text-stone-100">
        <div class="aspect-square w-10 grid place-items-center">
          <span class="text-violet-400 font-bold text-sm">@item.Icon</span>
        </div>
        <div class="flex items-center justify-between w-full bg-primary-900 px-4 capitalize">
          <span>@item.Category</span>
          <span>@((decimal)item.AmountCents / 100) &euro;</span>
        </div>
        <form method="POST">
          <input type="hidden" name="Id" value="@item.Id">
          <button type="button" class="aspect-square w-10 bg-primary-950">x</button>
        </form>
      </div>
      <div class="body px-4 py-2 flex justify-between">
        <div>
          <p>@item.Title</p>
          <p>@item.Description</p>
        </div>
        <div class="opacity-75">@item.CreatedAt.ToString("dd.MM.yyyy")</div>
      </div>
    </div>
    }
  </div>

