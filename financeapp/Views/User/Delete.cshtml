@model financeapp.Models.User

@{
ViewData["Title"] = "Delete";
}

<h3 class="max-w-lg mx-auto text-center text-xl py-2">Are you sure you want to delete this?</h3>
<div class="max-w-lg mx-auto outline outline-2 outline-stone-700
  px-4 py-6 rounded-xl space-y-4">
  <div class="flex justify-between">
    <div>
      <p class="opacity-75 italic">Username</p>
      <p class="py-2 rounded-md font-bold text-xl">@Model.Username</p>
    </div>
    <div class="text-end">
      <p class="opacity-75 italic">IsAdmin</p>
      <p class="py-2 rounded-md font-bold text-xl">@(Model.IsAdmin ? "True ðŸ‘‘" : "False ðŸš«")</p>
    </div>
  </div>
  <div class="leading-tight">
    <p class="opacity-75 italic">Password</p>
    <p class="py-2 rounded-md font-bold text-xl">@Model.Password</p>
  </div>
  <div class="leading-tight">
    <p class="opacity-75 italic">Email</p>
    <p class="py-2 rounded-md font-bold text-xl">@Model.Email</p>
  </div>

  <hr class="border-stone-600">

  <form asp-action="Delete" class="flex flex-col gap-2">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="py-2 px-4 bg-gradient-to-r from-primary to-purple-600 rounded-md
      motion-safe:transition-all hover:brightness-125">Delete</button>
    <a asp-action="Index" class=" text-center py-2 px-4 border-stone-600 border rounded-md
      motion-safe:transition-all hover:bg-stone-600">Back to List</a>
  </form>
</div>
