@model IEnumerable<financeapp.Models.User>

@{
    ViewData["Title"] = "Index";
}

<div class="w-max mx-auto p-4 outline outline-2 outline-stone-600 rounded-xl">
  <div class="flex gap-2 opacity-75 italic">
      <p>
          @Html.DisplayNameFor(model => model.Username)
      </p>
      <span class="opacity-75">|</span>
      <p>
          @Html.DisplayNameFor(model => model.Email)
      </p>
      <span class="opacity-75">|</span>
      <p>
          @Html.DisplayNameFor(model => model.Password)
      </p>
      <p class="ml-auto">
          <a asp-action="Create" class="text-primary-400 not-italic">Create New User</a>
      </p>
  </div>

@foreach (var item in Model) {
    <div class="flex gap-8 justify-between py-2">
      <div class="flex gap-1">
        <p>
            @(item.IsAdmin ? "ðŸ‘‘" : "")
        </p>
        <p>
            @Html.DisplayFor(modelItem => item.Username)
        </p>
        <span class="opacity-75">|</span>
        <p>
            @Html.DisplayFor(modelItem => item.Email)
        </p>
        <span class="opacity-75">|</span>
        <p>
            @Html.DisplayFor(modelItem => item.Password)
        </p>
      </div>
      <div class="flex gap-1">
          <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
          <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
      </div>
    </div>
    @if (item != Model.Last()) {
      <hr class="border-stone-500">
    }
}
</div>
